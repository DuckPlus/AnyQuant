<!--  <BorderPane prefHeight="700.0" prefWidth="900.0" stylesheets="@../css/optional.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.optionalStockController">-->

<BorderPane prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.optionalStockController">
   <left>
      <TabPane prefHeight="700.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="自选列表">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <TableView fx:id="tableview" onMouseClicked="#handleMouseClick" prefHeight="614.0" prefWidth="900.0" AnchorPane.bottomAnchor="53.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                            <TableColumn fx:id="name" prefWidth="75.0" text="股票名称" />
                            <TableColumn fx:id="code" prefWidth="75.0" text="股票代码" />
                              <TableColumn fx:id="open" prefWidth="75.0" text="开盘价" />
                              <TableColumn fx:id="high" prefWidth="75.0" text="最高价" />
                              <TableColumn fx:id="low" prefWidth="75.0" text="最低价" />
                              <TableColumn fx:id="close" prefWidth="75.0" text="收盘价" />
                              <TableColumn fx:id="turnoverRate" prefWidth="75.0" text="换手率" />
                              <TableColumn fx:id="turnoverVol" prefWidth="75.0" text="成交量" />
                              <TableColumn fx:id="amplitude" prefWidth="75.0" text="振幅" />
                              <TableColumn fx:id="changeRate" prefWidth="75.0" text="涨跌幅" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button layoutX="760.0" layoutY="623.0" mnemonicParsing="false" onMouseClicked="#deleteOptionalStock" prefHeight="35.0" prefWidth="134.0" styleClass="dark-blue" text="移除" />
                        <Button layoutX="602.0" layoutY="623.0" mnemonicParsing="false" onAction="#refreshOptionalStockData" prefHeight="37.0" prefWidth="134.0" text="刷新列表" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="boardDisTab" onSelectionChanged="#selectBoard" text="板块分布">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox fx:id="boardHBox" prefHeight="671.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="geoDisTab" onSelectionChanged="#selectRegion" text="地域分布">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox fx:id="regionHBox" prefHeight="671.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children></AnchorPane>
               </content>
            </Tab>
            <Tab text="自选比较">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" stylesheets="@../css/Optional/OptinalCompareView.css">
                     <children>
                        <TableView fx:id="cmpTableview" layoutX="7.0" layoutY="14.0" prefHeight="441.0" prefWidth="235.0">
                          <columns>
                            <TableColumn fx:id="cmpCode" prefWidth="75.0" text="股票代码" />
                            <TableColumn fx:id="cmpName" prefWidth="75.0" text="股票名称" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button layoutX="8.0" layoutY="576.0" mnemonicParsing="false" onMouseClicked="#addCmpStock" prefHeight="27.0" prefWidth="235.0" text="加入比较" />
                        <AnchorPane fx:id="cmpChartPane" layoutX="252.0" layoutY="15.0" prefHeight="635.0" prefWidth="627.0" />
                        <ComboBox fx:id="chartType" layoutX="7.0" layoutY="510.0" prefHeight="27.0" prefWidth="235.0" />
                        <DatePicker fx:id="cmpEnd" editable="false" layoutX="127.0" layoutY="543.0" prefHeight="27.0" prefWidth="115.0" />
                        <DatePicker fx:id="cmpBgn" editable="false" layoutX="7.0" layoutY="543.0" prefHeight="27.0" prefWidth="115.0" />
                        <Button layoutX="8.0" layoutY="619.0" mnemonicParsing="false" onMouseClicked="#clearCmpChart" prefHeight="27.0" prefWidth="235.0" text="移除" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <stylesheets>
            <URL value="@../css/Optional/optional.css" />
            <URL value="@../css/Tab.css" />
         </stylesheets>
      </TabPane>
   </left>
   <stylesheets>
      <URL value="@../css/Optional/optional.css" />
      <URL value="@../css/Optional/OptinalCommon.css" />
      <URL value="@../css/buttons.css" />
      <URL value="@../css/datePicker.css" />
      <URL value="@../css/Chart/barChart.css" />
      <URL value="@../css/Chart/pieChart.css" />
   </stylesheets>
</BorderPane>
