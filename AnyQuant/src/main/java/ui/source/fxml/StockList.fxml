<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.StockListController">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableview" layoutX="121.0" layoutY="7.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
              <columns>
                <TableColumn fx:id="name" prefWidth="75.0" text="股票名称" />
                <TableColumn fx:id="code" prefWidth="75.0" text="股票代码" />
                  <TableColumn fx:id="open" prefWidth="75.0" text="开盘价" />
                  <TableColumn fx:id="high" prefWidth="75.0" text="最高价" />
                  <TableColumn fx:id="low" prefWidth="75.0" text="最低价" />
                  <TableColumn fx:id="close" prefWidth="75.0" text="收盘价" />
                  <TableColumn fx:id="turnover" prefWidth="75.0" text="换手率" />
                  <TableColumn fx:id="volume" prefWidth="75.0" text="成交量" />
                  <TableColumn fx:id="amplitude" prefWidth="75.0" text="振幅" />
                  <TableColumn fx:id="changeRate" prefWidth="75.0" text="涨跌幅" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button layoutX="569.0" layoutY="2.0" mnemonicParsing="false" onAction="#showTableData" text="添加" />
            <Button layoutX="633.0" layoutY="2.0" mnemonicParsing="false" onMouseClicked="#delAllData" text="删除" />
            <TextField layoutX="70.0" layoutY="7.0" />
            <Label layoutX="10.0" layoutY="12.0" text="股票查询" />
         </children></AnchorPane>
   </center>
</BorderPane>
