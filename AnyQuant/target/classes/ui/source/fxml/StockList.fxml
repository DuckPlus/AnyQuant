<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane stylesheets="@../css/StockList.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.StockListController">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="background" BorderPane.alignment="CENTER">
         <children>
            <Label text="股票查询" textFill="WHITE" AnchorPane.leftAnchor="4.0" AnchorPane.topAnchor="10.0" />
            <TextField fx:id="searchBar" layoutX="78.0" layoutY="6.0" onKeyTyped="#searchStocklist" AnchorPane.topAnchor="6.0" />
            <TableView fx:id="tableview" onMouseClicked="#handleMouseClick" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
              <columns>
                <TableColumn fx:id="name" prefWidth="75.0" text="股票名称" />
                <TableColumn fx:id="code" prefWidth="75.0" text="股票代码" />
                  <TableColumn fx:id="open" prefWidth="75.0" text="开盘价" />
                  <TableColumn fx:id="high" prefWidth="75.0" text="最高价" />
                  <TableColumn fx:id="low" prefWidth="75.0" text="最低价" />
                  <TableColumn fx:id="close" prefWidth="75.0" text="收盘价" />
                  <TableColumn fx:id="turnoverRate" prefWidth="75.0" text="换手率" />
                  <TableColumn fx:id="turnoverVol" prefWidth="75.0" styleClass="notTrade" text="成交量" />
                  <TableColumn fx:id="amplitude" prefWidth="75.0" text="振幅" />
                  <TableColumn fx:id="changeRate" prefWidth="75.0" text="涨跌幅" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

         </children></AnchorPane>
   </center>
</BorderPane>
